<% content_for :head do %>
<title><%= t('.login') %> | Studish</title>
<meta name="description" content="<%= t('.description_login') %>">
<meta name="keywords" content="<%= t('.keywords_login') %>">
<% end %>

<div class="page-outer login">
  <div class="page-container">
    <h2 class="page-header"><%= t('.login') %></h2>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('.email') %>
        <%= f.email_field :email, class: "form-control", placeholder: t('.email') %>
      </div>
      <div class="form-group">
        <%= f.label :password, t('.password') %><%= link_to t('.forget-password'), new_password_reset_path, id: "forgot-password" %>
        <%= f.password_field :password, class: "form-control", placeholder: t('.password') %>
      </div>
      <div class="form-group">
        <%= f.check_box :remember_me %><span><%= t('.remember_me') %></span>
        <p><%= t('.remember_me_message') %></p>
      </div>
      <div class="form-group">
        <%= f.submit t('.login'), class: "btn btn-primary" %>
      </div>
      <p><%= t('.signup_message') %></p>
      <span class="signup_student"><%= link_to t('.signup_student'), new_user_path(user_type: 'student') %></span>
      <span class="signup_coach"><%= link_to t('.signup_coach'), new_user_path(user_type: 'coach') %></span>
    <% end %>
  </div>
</div>