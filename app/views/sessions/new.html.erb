<% content_for :head do %>
<title>ログイン（講師用） | Studish</title>
<meta name="description" content="Studishの講師用ログインページです。">
<meta name="keywords" content="Studish,スタディッシュ,オンライン指導,コーチング,Coaching,自学スキルの向上,ディスカッション,discussion">
<% end %>

<div class="content-wrapper" id="login-coach">
  <div class="content-container">
    <div class="content-header">
      <h2>ログイン（講師用）</h2>
    </div>
    
    <div class="content">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
        </div>
        <div class="form-group">
          <%= link_to "(forgot password)", new_password_reset_path %>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>
        </div>
        <div class="submit-group">
          <%= f.submit "ログイン", method: "post", class: "btn btn-primary" %>
        </div>
      <% end %>
      <span>New user? <%= link_to "Create my account", new_coach_path %></span>
    </div>
  </div>
</div>