<% content_for :head do %>
<title>ログイン | Studish</title>
<meta name="description" content="Studishのログインページです。">
<meta name="keywords" content="Studish,スタディッシュ,オンライン指導,コーチング,Coaching,自学スキルの向上,ディスカッション,discussion">
<% end %>

<div class="page-outer login">
  <div class="page-container">
    <h2 class="page-header">ログイン</h2>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= link_to "forgot password", new_password_reset_path %>
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= f.check_box :remember_me %><span>Remember me on this computer</span>
      </div>
      <div class="form-group">
        <%= f.submit "ログイン", method: "post", class: "btn btn-primary" %>
      </div>
      <span>New user? <%= link_to "Create my account", new_coach_path %></span>
    <% end %>
  </div>
</div>