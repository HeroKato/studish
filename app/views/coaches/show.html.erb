<% content_for :head do %>
<title><%= @coach.name %>さんのプロフィール | Studish</title>
<meta name="description" content="Studish講師のプロフィールページです。指導科目や自己紹介などを見て自分に合う講師を見つけましょう。">
<meta name="keywords" content="Studish,スタディッシュ,オンライン指導,コーチング,Coaching,自学スキルの向上,ディスカッション,discussion">
<% end %>

<div class="content-wrapper" id="coach-profile">
  <div class="content-container">
    <div class="content">
      <% if flash.notice %>
        <p class="notice"><%= flash.notice %></p>
      <% end %>
    </div>
    <div class= "coach-prof-1 clearfix">
      <div class="img-wrapper">
        <% if @coach.picture.present? %>
          <%= image_tag @coach.picture.url, oncontextmenu: "return false;" %>
        <% else %>
          <%= image_tag("no_image.png") %>
        <% end %>
      </div>
      <div class="profs">
        <div class="coach-name"><%= @coach.name %></div>
        <div class="coach-univ"><%= @coach.university %></div>
        <div class="coach-major"><%= @coach.major %></div>
        <div class="coach-schlyr"><%= @coach.school_year %></div>
      </div>
    </div>
    <div class="coach-prof-2">
      <div class="prof-content self-introduction">
        <div class="label-self-introduction"><%= label_tag :self_introduction, t('.self_introduction') %></div>
        <p><%= simple_format(@coach.self_introduction) %></p>
      </div>
      <div class="prof-content subjects">
        <div class="label-subjects"><%= label_tag :jr_subjects, t('.jr_subjects') %></div>
          <% @jr_subjects.each_value do |jr_subs| %>
            <% unless (jr_subs == nil) || (jr_subs == '0') %>
              <span class="subject-wrapper"><%= jr_subs %></span>
            <% end %>
          <% end %>
      </div>
      <div class="prof-content subjects">
        <div class="label-subjects"><%= label_tag :high_subjects, t('.high_subjects') %></div>
          <% @high_subjects.each_value do |high_subs| %>
            <% unless (high_subs == nil) || (high_subs == '0' ) %>
              <span class="subject-wrapper"><%= high_subs %></span>
            <% end %>
          <% end %>
      </div>
      <div class="prof-content certifications clearfix">
        <div class="label-certifications"><%= label_tag :certifications, t('.certifications') %></div>
        <% if @certifications.present? %>
          <% @certifications.each do |key, certs| %>
              <% unless (certs ==  nil) || (certs == "" ) %>
                <div class="certification">
                  <span><%= t(key) %></span>
                  <span><%= certs %></span>
                </div>
              <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <% if current_coach.administrator? %>
      <div class="content administrator-check">
        <%= @coach.administrator? ? "Yes" : "No" %>
      </div>
    <% end %>
    <% if current_coach == @coach %>
      <div class="content">
        <%= link_to "プロフィールを編集する", edit_coach_path(current_coach) %>
      </div>
      <div class="content">
        <%= link_to "アカウントを削除", :coach, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </div>
    <% end %>
    <div class="content back-to-coaches">
      <%= link_to "講師一覧へ", coaches_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>