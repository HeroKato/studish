<% content_for :head do %>
<title>講師一覧 | Studish</title>
<meta name="description" content="Studishの講師一覧ページです。相性の合う講師を見つけましょう。">
<meta name="keywords" content="Studish,スタディッシュ,オンライン指導,コーチング,Coaching,自学スキルの向上,ディスカッション,discussion">
<% end %>

<div class="content-wrapper", id="coach-list">
  <div class="content-container">
    <div class="content-header">
      <h2>講師一覧</h2>
    </div>
    <div class="content">
      <% if flash.notice %>
        <p class="notice"><%= flash.notice %></p>
      <% end %>
    </div>
    <%= will_paginate previous_label: '&#8592; &nbsp;前', next_label: '次 &#8594;' %>
    <div class="content clearfix">
      <div class="coach-card-wrapper">
        <% if @coaches.present? %>
          <% @coaches.each do |coach| %>
            <div class="coach-card">
              <%= link_to(coach) do %>
                <div class="coach-card-inner">
                  <div class="coach-image">
                    <% if coach.picture.present? %>
                      <%= image_tag coach.picture, oncontextmenu: "return false;" %>
                    <% else %>
                      <%= image_tag("no_image.png") %>
                    <% end %>
                  </div>
                  <div class="coach-name">
                    <%= coach.name %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <P>講師が一人もいません</P>
        <% end %>
      </div>
    </div>
    <%= will_paginate previous_label: '&#8592; &nbsp;前', next_label: '次 &#8594;' %>
  </div>
</div>