<div class="form-group comment-form">
  <%= form_for([@report, @report.comments.build]) do |f| %>
    <div class="form-group comment">
      <div class=""><%= f.label :body do %><%= current_coach.name %>としてコメントする<% end %></div>
      <div class=""><%= f.text_area :body, rows: 10, class: "form-control", placeholder: "1000文字以内" %></div>
    </div>
    <div class="form-group submit">
      <%= f.submit "コメント送信", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>