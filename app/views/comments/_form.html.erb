<%= form_for([@report, @report.comments.build]) do |f| %>
  <div class="form-group comment-form">
    <p><span class="user-name coach-name"><%= current_coach.name %></span><span class="user-account-name coach-account-name"><%= current_coach.account_name %></span>としてコメントする</p>
    <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "1000文字以内" %>
  </div>
  <div class="form-group submit">
    <%= f.submit "コメント送信", class: "btn btn-primary" %>
    <%= link_to "戻る", :back, class: "btn btn-success" %>
  </div>
<% end %>