<p class="report-footer" id="report-footer">
  <% if (fav_count = report.favorites.count) >= 0 %>
    <% if report.favorited_by? current_coach %>
      <%= link_to coaching_report_favorite_path(report, current_coach.id), method: :delete do %>
        <span class="favorites favorited"><i class="fa fa-heart"></i><%= fav_count %></span>
      <% end %>
    <% else %>
      <%= link_to coaching_report_favorites_path(report), method: :post do %>
        <span class="favorites"><i class="fa fa-heart"></i><%= fav_count %></span>
      <% end %>
    <% end %>
  <% end %>
  <% if (comment_count = report.comments.count) >= 0 %>
    <% if report.commented_by? current_coach %>
      <span class="comments commented"><i class="fa fa-commenting-o"></i><%= comment_count %></span> |
    <% else %>
      <span class="comments"><i class="fa fa-commenting-o"></i><%= comment_count %></span> |
    <% end %>
  <% end %>
  <% if current_coach %>
    <%= CoachingReport.status_text(report.status) %> |
    <% if current_coach == report.coach %>
      <%= link_to "編集", [:edit, report] %> |
      <%= link_to "削除", report, method: :delete, data: { confirm: "本当に削除しますか？" } %> |
    <% end %>
  <% end %>
  <%= report.created_at.strftime("%Y/%m/%d %H:%M") %>
</p>