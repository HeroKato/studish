<p class="report_footer">
  <% if current_coach %>
    <%= CoachingReport.status_text(report.status) %> |
    <% if current_coach == report.author %>
      <%= link_to "編集", [:edit, report] %> |
      <%= link_to "削除", report, method: :delete, data: { confirm: "本当に削除しますか？" } %> |
    <% end %>
  <% end %>
  <% if (count = report.comments.count) > 0 %>
  <span class="comment"><i class="fa fa-commenting-o"></i><%= count %></span> |
  <% end %>
  <%= report.created_at.strftime("%Y/%m/%d %H:%M") %>
</p>