<% content_for :head do %>
<title>お問い合わせ内容の確認 | Studish</title>
<meta name="description" content="お問い合わせ内容の確認ページです。">
<% end %>

<div id="inquiry-confirm" class="content-wrapper">
  <div id="inquiry-confirm-content-container" class="content-container">
    <div class="content-header">  
      <h2>内容確認</h2>
    </div>
    <p class="confirm-text">以下の内容で送信します。<br>よろしければ下記の送信ボタンを押してください。</p>
    <div class="content">
      <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
        <table id="inquiry-table-1" class="table table-bordered">
          <% if @inquiry.category %>
          <tr>
            <th>区分</th>
            <td>
              <%= f.hidden_field :category %>
              <%= @inquiry.category %>
            </td>
          </tr>
          <% end %>
          <tr>
            <th>学年</th>
            <td>
              <%= f.hidden_field :grade %>
              <%= @inquiry.grade %>
            </td>
          </tr>
          <tr>
            <th>お名前</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <% if @inquiry.skype %>
          <tr>
            <th>Skype名</th>
            <td>
              <%= f.hidden_field :skype %>
              <%= @inquiry.skype %>
            </td>
          </tr>
          <% end %>
        </table>
        <table id="inquiry-table-2" class="table table-bordered">
          <tr>
            <th id="inquiry-content-header">ご質問・ご相談内容</th>
          </tr>
          <tr>
            <td id="inquiry-content">
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <%= f.submit '送信', :class => 'submit btn btn-primary' %>
        <%= f.submit '入力し直す', name: 'back', :class => 'back btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>