<div class="form-group post">
  <%= form_for @post, :html => { multipart: true } do |f| %>
    <%= render 'shared/errors', obj: f.object %>
    <div class="form-group">
      <%= f.label :subject, class: "required" %>
      <%= f.select :subject, [, ["英語"], ["現代文"], ["古文"], ["漢文"], ["日本史"], ["世界史"], ["地理"], ["現代社会"], ["政治経済"], ["倫理"], ["数Ⅰ"], ["数A"], ["数Ⅱ"], ["数B"], ["数Ⅲ"], ["物理基礎・物理"], ["化学基礎・化学"], ["生物基礎・生物"], ["地学基礎・地学"]], class: "form-control text-denger" %>
    </div>
    <div class="form-group">
      <%= f.label :text_name, class: "required" %>
      <%= f.text_field :text_name, class: "form-control", placeholder: "例:青チャ1A、青チャート1A" %>
    </div>
    <div class="form-group">
      <%= f.label :chapter %>
      <%= f.text_field :chapter, class: "form-control", placeholder: "例:2章-2次関数、2-2次関数" %>
    </div>
    <div class="form-group">
      <%= f.label :section %>
      <%= f.text_field :section, class: "form-control", placeholder: "例:8-関数とグラフ" %>
    </div>
    <div class="form-group">
      <%= f.label :page %>
      <%= f.text_field :page, class: "form-control", placeholder: "例:p97、p97-98" %>
    </div>
    <div class="form-group">
      <%= f.label :number, class: "required" %>
      <%= f.text_field :number, class: "form-control", placeholder: "例:基本例題58、練習58" %>
    </div>
    <div class="form-group">
      <%= f.label :pattern %>
      <%= f.text_field :pattern, class: "form-control", placeholder: "関数f(a)の計算、座標平面と象限・点が属する象限の判定" %>
    </div>
    <div class="form-group">
      <%= f.fields_for :post_pictures do |pic| %>
        <%= pic.label :pictures, class: "required" %>
        <%= pic.file_field :pictures, accept: 'image/jpeg,image/gif,image/png' %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :caption, class: "required" %>
      <%= f.text_area :caption, rows: 10, class: "form-control", placeholder: "caption..." %>
    </div>
    <%= f.submit "投稿", class: "btn btn-primary" %>
  <% end %>
</div>