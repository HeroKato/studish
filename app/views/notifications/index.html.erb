<% content_for :head do %>
<title>通知 | Studish</title>
<meta name="description" content="Studishの通知ページです。">
<meta name="keywords" content="Studish,スタディッシュ,オンライン指導,コーチング,Coaching,自学スキルの向上,ディスカッション,discussion">
<% end %>

<div class="page-outer notifications">
  <div class="page-container" id="notification-stream">
    <div class="notification-stream-container">
      <% if @notifications.present? %>
        <% @notifications.each_with_index do |n, i| %>
          <%= render 'notifications', {n: n, i: i} %>
        <% end %>
        <%= paginate @notifications %>
      <% else %>
          <P class="nothing">通知はありません。</P>
      <% end %>
    </div>
  </div>
</div>