<% if obj.errors.present? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h3>The form contains <%= pluralize(obj.errors.count, "error") %>.</h3>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>