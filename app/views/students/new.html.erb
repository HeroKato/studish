<% content_for :head do %>
<title>新規登録 | Studish</title>
<meta name="description" content="Studishの生徒向け新規登録ページです。">
<meta name="keywords" content="Studish,スタディッシュ,オンライン指導,コーチング,studenting,自学スキルの向上,ディスカッション,discussion">
<% end %>

<div class="content-wrapper" id="student-new">
  <div class="content-container">
    <div class="content-header">
      <h2>新規登録</h2>
    </div>
    <div class="content">
      <%= render "shared/errors", obj: @student %>
      <%= form_for @student do |form| %>
        <div class="form-group">
          <%= form.label :account_name, class: "no-public" %>
          <%= form.text_field :account_name, class: "form-control", placeholder: "半角英数字が使用できます  (変更不可)。" %>
        </div>
        <div class="form-group">
          <%= form.label :email, class: "no-public" %>
          <%= form.text_field :email, class: "form-control", placeholder: "すぐにチェックできるアドレスにしましょう。" %>
        </div>
        <div class="form-group">
          <%= form.label :password, class: "no-public" %>
          <%= form.password_field :password, class: "form-control", placeholder: "英数字8文字以上" %>
        </div>
        <div class="form-group">
          <%= form.label :password_confirmation, class: "no-public" %>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "パスワードの確認" %>
        </div>
        <div class="submit-group">
          <%= form.submit "登録する", class: "btn btn-primary" %>
          <%= link_to "戻る", :back, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>