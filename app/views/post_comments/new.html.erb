<% content_for :head do %>
<%= render 'shared/fundamental_meta' %>
<%= render 'shared/twitter_meta' %>
<% end %>

<div class="page-outer" id="new-comment">
  <div class="page-container" id="post-comments-stream">
    <% if @commented_post_comment.present? %>
      <%= render 'commented_post_comment' %>
      <hr class="hr-bottom hr-bold">
      <span class="reply-to">reply to id:<%= @commented_post_comment.id %></span>
    <% else %>
      <%= render @post %>
      <hr class="hr-bottom hr-bold">
      <span class="reply-to">reply to id:<%= @post.id %></span>
    <% end %>
    <%= render "form" %>
    <hr class="hr-bottom">
    <ol class="comments post-comments-stream-container">
      <%= render "comments" %>
      <%= paginate @comments %>
    </ol>
  </div>
</div>