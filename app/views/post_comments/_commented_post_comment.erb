<div class="commented_post_comment" id="post-comment-id-<%= @commented_post_comment.id %>">
  <% if @commented_post_comment.student.present? %>
    <div class="profile clearfix">
      <%= link_to @commented_post_comment.student, class: "avatar-link" do %>
        <%= image_tag @commented_post_comment.student.avatar.medium.url, class: "avatar", oncontextmenu: "return false;" %>
      <% end %>
      <div class="user-info student-info">
        <%= link_to @commented_post_comment.student, class: "name-link" do %>
          <span class="user-name student-name"><%= @commented_post_comment.student.name %></span><br><span class="user-account-name student-account-name"><%= @commented_post_comment.student.account_name %></span>
        <% end %>
      </div>
    </div>
  <% elsif @commented_post_comment.coach.present? %>
    <div class="profile clearfix">
      <%= link_to @commented_post_comment.coach, class: "avatar-link" do %>
        <%= image_tag @commented_post_comment.coach.avatar.medium.url, class: "avatar", oncontextmenu: "return false;" %>
      <% end %>
      <div class="user-info student-info">
        <%= link_to @commented_post_comment.coach, class: "name-link" do %>
          <span class="user-name student-name"><%= @commented_post_comment.coach.name %></span><br><span class="user-account-name student-account-name"><%= @commented_post_comment.coach.account_name %></span>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @commented_post_comment.comment_pictures.present? %>
    <div class="picture-wrapper">
    <% @commented_post_comment.comment_pictures.each do |pic| %>
      <%= image_tag pic.pictures.large.url, oncontextmenu: "return false;", class: "pictures post-pictures" %>
    <% end %>
    </div>
  <% end %>
  <span class="status"><%= @commented_post_comment.status %></span>
  <% if @commented_post_comment.commented_post_comment_id.present? %>
  <span class="reply-to">on id:<%= @commented_post_comment.commented_post_comment_id %></span>
  <% end %>
  <span class="time"><%= time_ago_in_words(@commented_post_comment.created_at) %>前</span>
  <span class="comment-id">id:<%= @commented_post_comment.id %></span>
  <div class="caption">
  <%= simple_format(@commented_post_comment.caption, class: "caption-text") %>
  </div>
      
  <div class="action-buttons">
    <% if logged_in_as_student? %>
      <% if @commented_post_comment.favorites.where(student_id: current_student.id).present? %>
        <%= link_to post_comment_favorite_path(@commented_post_comment, current_student.id), method: :delete, class: "action-button-link" do %>
        <i class="fa fa-heart action-button favorited"></i><span class="count favorite-count favorited"><%= @commented_post_comment.favorites.count %></span>
        <% end %>
      <% else %>
        <%= link_to post_comment_favorites_path(@commented_post_comment), method: :post, class: "action-button-link" do %>
        <i class="fa fa-heart action-button"></i><span class="count favorite-count"><%= @commented_post_comment.favorites.count %></span>
        <% end %>
      <% end %>
      <% if current_student.post_comments.find_by(commented_post_comment_id: @commented_post_comment.id).present? %>
        <%= link_to new_post_comment_path(post_id: @commented_post_comment.post.id, commented_post_comment_id: @commented_post_comment.id), class: "action-button-link" do %>
          <i class="fa fa-commenting-o action-button commented"></i><span class="count comment-count commented"><%= @commented_post_comment.post.post_comments.where(commented_post_comment_id: @commented_post_comment.id).count %></span>
        <% end %>
      <% else %>
        <%= link_to new_post_comment_path(post_id: @commented_post_comment.post.id, commented_post_comment_id: @commented_post_comment.id), class: "action-button-link" do %>
          <i class="fa fa-commenting-o action-button"></i><span class="count comment-count"><%= @commented_post_comment.post.post_comments.where(commented_post_comment_id: @commented_post_comment.id).count %></span>
        <% end %>
      <% end %>
    <% elsif logged_in_as_coach? %>
      <% if @commented_post_comment.favorites.where(coach_id: current_coach.id).present? %>
        <%= link_to post_comment_favorite_path(@commented_post_comment, current_coach.id), method: :delete, class: "action-button-link" do %>
        <i class="fa fa-heart action-button favorited"></i><span class="count favorite-count favorited"><%= @commented_post_comment.favorites.count %></span>
        <% end %>
      <% else %>
        <%= link_to post_comment_favorites_path(@commented_post_comment), method: :post, class: "action-button-link" do %>
        <i class="fa fa-heart action-button"></i><span class="count favorite-count"><%= @commented_post_comment.favorites.count %></span>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to post_comment_favorites_path(@commented_post_comment), method: :post, class: "action-button-link" do %>
        <i class="fa fa-heart action-button"></i><span class="count favorite-count"><%= @commented_post_comment.favorites.count %></span>
      <% end %>
    <% end %>
  </div>
      
  <div class="edit_delete">
    <% if current_student.present? %>
      <% if current_student == @commented_post_comment.student %>
        <%= link_to "編集", [:edit, @commented_post_comment], class: "edit" %>
        <%= link_to "削除", @commented_post_comment, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "delete" %>
      <% end %>
    <% elsif current_coach.present? %>
      <% if current_coach == @commented_post_comment.coach %>
        <%= link_to "削除", @commented_post_comment, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "delete" %>
      <% end %>
    <% end %>
  </div>
</div>